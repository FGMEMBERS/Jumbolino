<?xml version="1.0"?>
<PropertyList>

  <path>ai.ac</path>

  <animation>
    <type>scale</type>
    <x-offset>0.8</x-offset>
    <y-offset>0.8</y-offset>
    <z-offset>0.8</z-offset>
    </animation>

  <animation>
    <type>select</type>
    <object-name>off-flag</object-name>
    <condition>
      <less-than>
        <property>systems/electrical/outputs/efis</property>
        <value>15</value>
      </less-than>
    </condition>
  </animation>


  <animation>
    <type>rotate</type>
    <object-name>sphere</object-name>
    <property>orientation/roll-deg</property>
    <center>
      <x-m>-0.03797</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis><x>1</x></axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>sphere</object-name>
    <property>orientation/pitch-deg</property>
    <center>
      <x-m>-0.03797</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis><y>1</y></axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>bank-index</object-name>
    <property>orientation/roll-deg</property>
    <center>
      <x-m>-0.03797</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis><x>1</x></axis>
  </animation>
  
  <!-- ILS Symbols -->
    <animation>
        <type>translate</type>
        <object-name>loc-index</object-name>
        <property>instrumentation/nav/heading-needle-deflection</property>
        <interpolation>
            <entry><ind>-5.0</ind><dep>-0.022</dep></entry>
            <entry><ind> 0.0</ind><dep> 0</dep></entry>
            <entry><ind> 5.0</ind><dep> 0.022</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
	
    <animation>
        <type>translate</type>
        <object-name>glide-slope-index</object-name>
        <property>instrumentation/nav/gs-needle-deflection</property>
        <interpolation>
            <entry><ind>-2.0</ind><dep>-0.022</dep></entry>
            <entry><ind> 0.0</ind><dep> 0</dep></entry>
            <entry><ind> 2.0</ind><dep> 0.022</dep></entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
  
  <!-- FD Bars -->
    <animation>
        <type>translate</type>
        <object-name>roll-steering-bar</object-name>
        <property>autopilot-v/fd/roll-bar</property>
        <factor>0.0005</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
	
    <animation>
        <type>translate</type>
        <object-name>pitch-steering-bar</object-name>
        <property>autopilot-v/fd/pitch-bar</property>
        <factor>0.00105</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

  <!-- Pitch Knob -->
    <animation>
        <type>rotate</type>
        <object-name>adi-knob</object-name>
        <property>it-autoflight/input/pitch-deg</property>
        <factor>5</factor>
        <axis>
            <x>-1.0</x>
            <y> 0.0</y>
            <z> 0.0</z>
        </axis>
        <center>
            <x-m> 0.0</x-m>
            <y-m>0.05516</y-m>
            <z-m>-0.05582</z-m>
        </center>
    </animation>

	<animation>
		<type>pick</type>
		<object-name>adi-knob</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>it-autoflight/input/pitch-deg</property>
				<min>-15</min>
				<max>30</max>
				<step>1</step>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>it-autoflight/input/pitch-deg</property>
				<min>-15</min>
				<max>30</max>
				<step>-1</step>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

  <!-- slip-ball-->
  <animation>
    <type>rotate</type>
    <object-name>slip-ball</object-name>
    <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <factor>3</factor>
    <min-deg>-3</min-deg>
    <max-deg>3</max-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.18</z-m>
    </center>
    <axis><x>-1</x></axis>
  </animation>

  <!-- lighting -->

  <animation>
    <object-name>ai</object-name>
    <type>material</type>
    <emission>
      <factor-prop>controls/lighting/panel-light</factor-prop>
      <red>0.4</red>
      <green>0.4</green>
      <blue>0.4</blue>
    </emission>
  </animation>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>15</max-m>
  </animation>

</PropertyList>
