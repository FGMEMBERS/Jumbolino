<!-- Rotate the baro setting knob for amusement -->

	<animation>
		<type>knob</type>
		<visible>true</visible>
		<object-name>baroknob</object-name>
		<property>instrumentation/altimeter[1]/setting-inhg</property>
		<factor>1600</factor>
		<center>
			<x-m>0</x-m>
			<y-m>-0.03</y-m>
			<z-m>-0.0288</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>

		<action>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/altimeter[1]/setting-inhg</property>
				<factor>0.01</factor>
				<min>25</min>
				<max>35</max>
				<wrap>0</wrap>
			</binding>
		</action>

		<shift-action>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/altimeter[1]/setting-inhg</property>
				<factor>0.005</factor>
				<min>25</min>
				<max>35</max>
				<wrap>0</wrap>
			</binding>
		</shift-action>

		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>altimeter-pressure-[1]</tooltip-id>
				<label>Altimeter: %.1f</label>
				<property>/b733/instrumentation/altimeter[1]/setting-hpa</property>
			</binding>
		</hovered>
	</animation>


